{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "husky": {
    "hooks": {
      "pre-push": "yarn test && yarn lint-fix"
    }
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "axios": "^0.19.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.1",
    "typescript": "~3.7.2"
  },
  "scripts": {
    "start": "PORT=8081 react-scripts start",
    "build": "react-scripts build && rsync -avh ./build/ ./../public/ && rm -rf ./build",
    "test": "react-scripts test --watchAll=false",
    "eject": "react-scripts eject",
    "lint:style": "stylelint src/**/*.scss",
    "lint:style-fix": "stylelint src/**/*.scss --fix",
    "lint:script": "eslint src/**/*.{js,jsx,ts,tsx}",
    "lint:script-fix": "eslint src/**/*.{js,jsx,ts,tsx} --fix",
    "lint": "concurrently \"yarn lint:style\" \"yarn lint:script\"",
    "lint-fix": "concurrently \"yarn lint:style-fix\" \"yarn lint:script-fix\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/webpack-env": "^1.15.1",
    "concurrently": "^5.1.0",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.15.1",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^4.2.1",
    "node-sass": "^7.0.0",
    "stylelint": "^13.0.0",
    "stylelint-config-airbnb": "^0.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.14.2"
  }
}
